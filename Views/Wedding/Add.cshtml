@{
    ViewData["Title"] = "Wedding Planner";
}

<h1>Plan Your Wedding</h1>
<a href="/dashboard"><button type="submit" name="Dashboard">Dashboard</button></a>
<form action="/logout" method="POST">
    <input type="submit" name="submit" value="Logout">
</form>

<form action="/add" method="POST">
        <label for="wed_one" class="info">Wedder One: </label>
        <input type="text" name="wed_one" id="wed_one"><br>

        <label for="wed_two" class="info">Wedder two: </label>
        <input type="text" name="wed_two" id="wed_two"><br>

        <label for="date" class="info">Date: </label>
        <input type="date" name="date" id="date"><br>

        <label for="address" class="info">Address: </label>
        <input type="text" name="address" id="address"><br>

        <button type="submit" name="submit">Create</button>
    </form>

    <p style = "color: red">@ViewBag.Date</p>